{
  "name": "backend",
  "version": "1.0.0",
  "description": "backend test",
  "main": "dist/index.js",
  "scripts": {
    "build": "npx tsc",
    "start": "NODE_ENV=production node dist/index.js",
    "start:dev": "node dist/index.js",
    "dev": "nodemon --watch src --ext ts --exec \"ts-node src/index.ts\"",
    "migrate:firebase": "ts-node src/scripts/firebase-migration.ts",
    "migrate:uploads": "ts-node scripts/migrate-uploads-to-firebase.ts",
    "update:db-urls": "ts-node scripts/update-db-urls-to-firebase.ts",
    "create:admin": "ts-node src/scripts/create-admin.ts",
    "update:admin": "ts-node src/scripts/update-admin-permissions.ts",
    "ssl:generate": "node scripts/generate-ssl-cert.js",
    "ssl:fix": "node scripts/generate-ssl-cert-fixed.js",
    "ssl:mkcert": "node scripts/setup-mkcert.js",
    "https": "ENABLE_HTTPS=true npm run dev",
    "http-only": "ENABLE_HTTPS=false npm run dev",
    "docker:build": "docker-compose build",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f ar-namecard-backend",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:stop": "docker-compose -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker-compose -f docker-compose.dev.yml logs -f ar-namecard-backend-dev",
    "docker:rebuild": "docker-compose down && docker-compose build --no-cache && docker-compose up -d",
    "docker:clean": "docker system prune -f && docker volume prune -f",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/exceljs": "^0.5.3",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "firebase-admin": "^13.4.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.4",
    "multer": "^2.0.1",
    "sharp": "^0.34.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.0.14",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
