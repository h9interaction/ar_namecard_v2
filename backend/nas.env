# ==============================================
# AR Namecard API - Synology NAS Configuration
# ==============================================

# NAS Server Information
NAS_IP=192.168.1.93
DOMAIN_NAME=ar-namecard.local

# Server Configuration
NODE_ENV=production
PORT=3000
HTTPS_PORT=3443
HOST=0.0.0.0
ENABLE_HTTPS=true

# Port Mapping for NAS
API_HTTP_PORT=3000
API_HTTPS_PORT=3443
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Database Configuration
MONGO_ROOT_USERNAME=ar_admin
MONGO_ROOT_PASSWORD=SecurePassword123!
MONGO_DB_NAME=ar_namecard
MONGODB_URI=mongodb://ar_admin:SecurePassword123!@mongodb:27017/ar_namecard?authSource=admin

# JWT Configuration (CHANGE THIS!)
JWT_SECRET=your-super-secure-jwt-secret-for-production-use-minimum-32-characters
JWT_EXPIRES_IN=24h

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# CORS Configuration
FRONTEND_URL=https://192.168.1.93
CORS_ALLOW_ALL=false

# SSL Configuration
SSL_KEY_PATH=./ssl/server.key
SSL_CERT_PATH=./ssl/server.crt

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# Network Configuration
SUBNET=172.20.0.0/16

# Backup Configuration
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/volume1/docker/ar-namecard/backups

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30s
LOG_LEVEL=info
LOG_MAX_SIZE=100m
LOG_MAX_FILES=10

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
TRUSTED_PROXIES=172.20.0.0/16,192.168.1.0/24

# ==============================================
# Additional Notes:
# ==============================================
# 1. Change JWT_SECRET to a secure random string
# 2. Update Firebase configuration with your actual project details
# 3. Ensure SSL certificates are properly generated
# 4. Verify network settings match your NAS configuration
# 5. Test all services before production deployment