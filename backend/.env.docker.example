# Docker Compose 실행 환경 변수 예시 파일
# 이 파일을 .env.docker 로 복사한 후, 실제 값으로 채워주세요.

# 실행 환경 (production 권장)
NODE_ENV=production

# API 서버 포트 설정
API_HTTP_PORT=3000
API_HTTPS_PORT=3443

# MongoDB Atlas 연결 URI
# 실제 데이터베이스 연결 문자열로 교체해야 합니다.
MONGODB_URI="mongodb+srv://<user>:<password>@<cluster-url>/<db-name>?retryWrites=true&w=majority"

# JWT 비밀 키 (프로덕션 환경에서는 반드시 강력한 임의의 문자열로 변경)
JWT_SECRET="CHANGE_THIS_TO_A_VERY_STRONG_RANDOM_SECRET_KEY"
JWT_EXPIRES_IN=24h

# Firebase Admin SDK 설정
# 실제 Firebase 프로젝트의 값으로 교체해야 합니다.
FIREBASE_PROJECT_ID="your-firebase-project-id"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----
...
-----END PRIVATE KEY-----
"
FIREBASE_CLIENT_EMAIL="firebase-admin-sdk@your-project.iam.gserviceaccount.com"
FIREBASE_STORAGE_BUCKET="your-project.appspot.com"

# HTTPS 사용 여부 (SSL 인증서가 준비된 경우 true로 변경)
ENABLE_HTTPS=false
